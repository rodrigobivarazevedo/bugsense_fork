{
  "name": "My Codespace",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    }
  },
  "containerEnv": {
    "GOOGLE_CREDENTIALS": "${{ secrets.GOOGLE_CREDENTIALS }}"
  },
  "postStartCommand": "bash .devcontainer/init-env.sh && cd /workspaces/repo_name/app/ai-api && docker compose up -d"
}
